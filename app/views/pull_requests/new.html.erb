<%= form_with(model: @pull_request, url: create_pull_request_path, method: :post, local: true, class: "needs-validation") do |form| %>
  <div class="form-group" >
    <%= form.text_field :username, class: "form-control", value: current_user.user_name, required: true, style: "display: none;" %>
    <div class="invalid-feedback">Please enter your username.</div>
  </div>

  <div class="form-group">
    <%= form.text_field :repo, class: "form-control", value: @repo, required: true, style: "display: none;" %>
  </div>

  <div class="form-group">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", required: true %>
    <div class="invalid-feedback">Please enter the title.</div>
  </div>

  <div class="form-group">
    <%= form.label :head, class: "form-label" %>
    <%= form.select :head, @branches.map { |branch| [branch['name'], branch['name']] }, { prompt: 'Select head branch' }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :base, class: "form-label" %>
    <%= form.select :base, @branches.map { |branch| [branch['name'], branch['name']] }, { prompt: 'Select base branch' }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body, class: "form-label" %>
    <%= form.text_area :body, class: "form-control", rows: 4 %>
  </div>

  <%= form.submit "Create Pull Request", class: "btn btn-primary" %>
<% end %>
